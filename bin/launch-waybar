#!/bin/bash

THEME="$1"

CONFIG="$HOME/.config/waybar/themes/$THEME/config.jsonc"
STYLE="$HOME/.config/waybar/themes/$THEME/style.css"

if [[ -f "$CONFIG" && -f "$STYLE" ]]; then
    killall --quiet --exact waybar
    waybar -c "$CONFIG" -s "$STYLE" &
else
    echo "Theme '$THEME' not found or incomplete."
fi
